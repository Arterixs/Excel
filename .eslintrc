{
    "parser" : "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": "off",
        "linebreak-style": "off",
        "require-jsdoc": "off",
        "indent": "off",
        "arrow-parens": "off",
        "operator-linebreak": ["error", "before"],
        "max-len": ["error", 120]
    },
    "extends": ["eslint:recommended", "google"]
}